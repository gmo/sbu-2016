<body>
  <%= form_for(@keyword) do |f| %>
  <% if @keyword.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@keyword.errors.count, "error") %> prohibited this keyword from being saved:</h2>

      <ul>
      <% @keyword.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <style>
  body{
    background-color: #CDCDCD;
    
  }
  
  .one {
    padding-left: 14%;
    padding-bottom: 1%;
  }
  
  .box{
    font-size: .6em;
    width: 250px;
  }
  
  .field{
    font-size: 1.5em;
    padding-top: 3%;
    padding-bottom: 1%;
  }
  
  button{
     border-radius: 5px;
     width: 120px;
     height: 30px;
     font-size: 20px;
    }
    
    button:hover{
      background-color:  #dfa329;

    }
    
  .submit{
     border-radius: 5px;
     width: 120px;
     height: 30px;
     font-size: 20px;
    }
    
    .submit:hover{
      background-color:  #dfa329;

    }
    
    .actions{
      display: inline;
    }
  </style>

  <div class="field">
    <%= f.label :word %>
    <p style="display:inline" class="one"></p>
    <%= f.label :language %><br>
    <%= f.text_field( :word, :class => "box") %>
    
    <%= f.select :language do %>
      <% options_for_select([['Arabic', 'Arabic'], ['Chinese', 'Chinese'], ['English', 'English'], ['French', 'French'], ['Hindi', 'Hindi'], ['Indonesian', 'Indonesian'], ['Portuguese', 'Portuguese'], ['Russian', 'Russian'], ['Spanish', 'Spanish']], {:class => "box"})%>
    <% end %>
  </div>
  
  <div class="actions">
    <%= link_to '<button type="button">Back</button>'.html_safe, keywords_path %>
    <%= f.submit "Add Word" , :class => "submit" %>
  </div>
<% end %>
</body>

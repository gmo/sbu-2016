<body>
<header>
  <%= image_tag("gmo_logo.png", :width =>"600px", :height =>"100px") %>
</header>

<style>
  body{
    background-color: #D3D3D3;
  }
  
  p{
    font-size: 20px;
    padding-top: 10px;
  }
  
  button{
     border: 1px solid;
     border-radius: 10px;
     width: 100px;
     height: 30px;
     font-size: 20px;
     margin-top: 20px;
     background-color: none;
     font-weight: bold;
     text-transform: uppercase;
    }
    
    button:hover{
      background-color:  #055890;
      color: white;
    }
    
</style>

<p id="notice"><%= notice %></p>

<p>
  <strong>Word:</strong>
  <%= @keyword.word %>
</p>

<p>
  <strong>Language:</strong>
  <%= @keyword.language %>
</p>

<span><%= link_to '<button type="button">OK</button>'.html_safe, keywords_path %></span>
</body>

